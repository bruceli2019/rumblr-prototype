<h1>
  Add a new message
</h1>


<hr>

<form action="/create_message" method="post">

  <div class="form-group">
    <label for="match_id">
      Match
    </label>

    <input type="text" id="match_id" name="match_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="chat">
      Chat
    </label>

    <textarea id="chat" name="chat" class="form-control" rows="3"></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create message
  </button>
</form>

<hr>

<a href="/messages">
  Go back
</a>
