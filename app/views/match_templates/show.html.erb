<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Match #<%= @match.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/matches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/matches/<%= @match.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit match
        </a>
      </div>

      <div class="col">
        <a href="/delete_match/<%= @match.id %>" class="btn btn-block btn-outline-secondary">
          Delete match
        </a>
      </div>
    </div>

    <dl>
      <dt>
        My
      </dt>
      <dd>
        <%= @match.my_id %>
      </dd>

      <dt>
        Other user
      </dt>
      <dd>
        <%= @match.other_user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@match.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@match.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

