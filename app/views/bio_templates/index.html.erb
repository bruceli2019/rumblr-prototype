<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bios
    </h1>

    <a href="/bios/new" class="btn btn-block btn-outline-secondary">
      Add a new bio
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bios.each do |bio| %>
      <tr>
        <td>
          <%= bio.id %>
        </td>

        <td>
          <%= bio.description %>
        </td>

        <td>
          <%= bio.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(bio.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(bio.updated_at) %> ago
        </td>

        <td>
          <a href="/bios/<%= bio.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
