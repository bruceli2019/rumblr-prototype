<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bio #<%= @bio.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bios" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/bios/<%= @bio.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bio
        </a>
      </div>

      <div class="col">
        <a href="/delete_bio/<%= @bio.id %>" class="btn btn-block btn-outline-secondary">
          Delete bio
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @bio.description %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @bio.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bio.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bio.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

